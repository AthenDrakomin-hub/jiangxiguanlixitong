# Upstash Redis Configuration
# Get these values from your Upstash Redis database settings

# Primary configuration (recommended)
KV_REST_API_URL=https://YOUR_UPSTASH_REDIS_ENDPOINT.upstash.io
KV_REST_API_TOKEN=YOUR_UPSTASH_REDIS_TOKEN

# Optional: Read-only token for additional security
KV_REST_API_READ_ONLY_TOKEN=YOUR_UPSTASH_REDIS_READ_ONLY_TOKEN

# Alternative variable names (if the above don't work)
UPSTASH_REDIS_URL=https://YOUR_UPSTASH_REDIS_ENDPOINT.upstash.io
UPSTASH_REDIS_TOKEN=YOUR_UPSTASH_REDIS_TOKEN

# Hotel-specific variable names (highest priority)
HOTEL_KV_REST_API_URL=https://YOUR_UPSTASH_REDIS_ENDPOINT.upstash.io
HOTEL_KV_REST_API_TOKEN=YOUR_UPSTASH_REDIS_TOKEN

# Administrator account credentials (REQUIRED for login)
VITE_ADMIN_USER=admin
VITE_ADMIN_PASS=your_secure_password_here

