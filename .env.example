# =============================================
# 江西酒店管理系统 - 环境变量配置示例
# =============================================

# =============================================
# 数据库配置
# =============================================
# 数据库类型: memory (开发), neon (生产)
DB_TYPE=memory

# Neon PostgreSQL 数据库连接字符串 (生产环境)
NEON_CONNECTION_STRING=your_neon_connection_string_here

# 数据库连接 URL (备用)
DATABASE_URL=your_neon_connection_string_here

# =============================================
# 管理员凭据配置
# =============================================
# 管理员用户名 (必需)
VITE_ADMIN_USER=admin

# 管理员密码 (必需，建议使用强密码)
VITE_ADMIN_PASS=admin123

# 管理员API密钥 (用于保护敏感端点，必需使用强密钥)
ADMIN_KEY=your_secure_admin_key_here
VITE_ADMIN_KEY=your_secure_admin_key_here

# =============================================
# 应用程序配置
# =============================================
# 运行环境: development, production
NODE_ENV=development

# Vercel部署URL (部署后更新)
VERCEL_URL=your-vercel-project-name.vercel.app

# 本地开发端口
PORT=5173

# 应用URL (用于QR码生成等)
VITE_APP_URL=http://localhost:5173

# =============================================
# 安全配置
# =============================================
# 会话超时时间 (分钟)
SESSION_TIMEOUT=120

# 密码最小长度
MIN_PASSWORD_LENGTH=8

# 最大登录尝试次数
MAX_LOGIN_ATTEMPTS=5

# 登录锁定时间 (分钟)
LOGIN_LOCKOUT_DURATION=15

# =============================================
# 通知和API配置
# =============================================
# 通知服务API密钥
NOTIFICATION_API_KEY=your_notification_api_key

# 打印服务配置
PRINT_API_KEY=your_print_api_key
FEIEYUN_API_KEY=your_feieyun_api_key
FEIEYUN_UKEY=your_feieyun_ukey

# =============================================
# Vercel/部署变量 (自动填充)
# =============================================
VERCEL_GIT_COMMIT_SHA=auto-filled-by-vercel
VERCEL_GIT_COMMIT_MESSAGE=auto-filled-by-vercel
VERCEL_GIT_COMMIT_AUTHOR_NAME=auto-filled-by-vercel
VERCEL_GIT_REPO_URL=auto-filled-by-vercel

# =============================================
# 业务配置
# =============================================
# 汇率设置 (PHP to CNY)
EXCHANGE_RATE=8.2

# 服务费比例
SERVICE_CHARGE_RATE=0.1

# 语言设置
DEFAULT_LANGUAGE=zh-CN

# 时区设置
TIMEZONE=Asia/Manila